generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String        @id @default(cuid())
  fullName       String?
  username       String        @unique
  email          String        @unique
  password       String
  phoneNumber    String?
  isMentor       Boolean       @default(false)
  role           Role          @default(USER)
  status         AccountStatus @default(INACTIVE)
  isVerified     Boolean       @default(false)
  lastLogin      DateTime?
  credits        Int           @default(5)
  profilePicture String        @default("https://www.mauicardiovascularsymposium.com/wp-content/uploads/2019/08/dummy-profile-pic-300x300.png")

  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  Profile    Profile?
  Onboarding Onboarding?
  Timeline   Timeline[]
  MileStone  MileStone[]
  Journal    Journal[]
  ownedSpaces     CommunitySpace[]
  memberships     CommunityMember[]
  posts           CreatePost[]
  postLikes       PostLike[]
  postComments    PostComment[]
  postReports     PostReport[]
  postSaves       PostSave[]

  recentActivities CommunitySpaceRecentActivity[]
  payments         PaymentTransaction[]

  mentorProfile   MentorProfile?
  mentorSessions  MentorSession[] @relation("MentorSessions")
  studentSessions MentorSession[] @relation("StudentSessions")
  AIInsights AIInsight[]
  notifications Notification[]
  aiCareerPredictor AICareerPredictor?
  creditUsages CreditUsage[]





}

enum Role {
  ADMIN
  USER
  MODERATOR
}

enum AccountStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

model Profile {
  id          String   @id @default(cuid())
  bio         String?
  headline    String?
  location    String?
  timezone    String?
  language    String   @default("English")
  skills      String[]
  careerStage String?
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Onboarding {
  id                  String         @id @default(cuid())
  userId              String         @unique
  user                User           @relation(fields: [userId], references: [id])
  onboardingStep      Int            @default(0)
  primaryGoalCategory GoalCategory?
  topGoals            String[]
  timeHorizon         TimeHorizon?
  riskTolerance       RiskTolerance?
  preferredView       PreferredView?
  interests           String[]
  referralSource      String? // "Friend", "LinkedIn", "Ad"
  referralID          String?

  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum GoalCategory {
  CAREER
  EDUCATION
  HEALTH
  FINANCE
  PERSONAL_GROWTH
  ENTREPRENEURSHIP
}

enum TimeHorizon {
  ONE_YEAR
  THREE_YEARS
  FIVE_YEARS
}

enum RiskTolerance {
  LOW
  MEDIUM
  HIGH
}

enum PreferredView {
  TIMELINE
  ROADMAP
  CALENDAR
}

enum TimelineCategory {
  CAREER
  EDUCATION
  PERSONAL
  FITNESS
  FINANCE
  ENTREPRENEURSHIP
}

model Timeline {
  id               String           @unique @default(cuid())
  name             String
  category         TimelineCategory @default(CAREER)
  duration         TimeHorizon      @default(ONE_YEAR)
  startDate        DateTime         @default(now())
  endDate          DateTime
  risk_challanges  String[]
  resources_needed String[]
  milestones       MileStone[]
  ai_suggestions   Json[]           @default([])
  isPublic         Boolean          @default(false)

  user   User   @relation(fields: [userId], references: [id])
  userId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum Status {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}

model MileStone {
  id             String       @unique @default(cuid())
  title          String
  description    String
  targetDate     DateTime
  status         Status       @default(NOT_STARTED)
  priority       Priority     @default(MEDIUM)
  tags           String[]
  ai_suggestions Json[]       @default([])
  user           User         @relation(fields: [userId], references: [id])
  userId         String
  Timeline       Timeline?    @relation(fields: [timelineId], references: [id])
  timelineId     String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  SubTask        SubTask[]
  Reflection     Reflection[]
}

model SubTask {
  id          String    @id @default(cuid())
  title       String
  mileStone   MileStone @relation(fields: [mileStoneId], references: [id])
  mileStoneId String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Reflection {
  id          String    @id @default(cuid())
  note        String
  mileStone   MileStone @relation(fields: [mileStoneId], references: [id])
  mileStoneId String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}


enum MOOD{
  HAPPY
  SAD
  NEUTRAL
  EXCITED
  ANXIOUS
  GRATEFUL
  STRESSED
  MOTIVATED
  REFLECTIVE
}
model Journal{
  id String @id @default(cuid())
  user User @relation(fields: [userId], references: [id])
  userId String
  title String
  content String
  tags String[]
  mood MOOD @default(REFLECTIVE)
  ai_suggestions Json[] @default([])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}


model CommunitySpace{
  id String @id @default(cuid())
  name String
  slug String @unique
  description String
  coverImage String?
  isPrivate Boolean @default(false)
  isVerified Boolean @default(false)
  category String
  rules String[]
  owner User @relation(fields: [ownerId], references: [id])
  ownerId String
  members CommunityMember[]
  joinCode String @default(uuid())
  posts CreatePost[]
  recentActivities CommunitySpaceRecentActivity[]
  notifications CommunitySpaceNotification[]

  maxMembers Int @default(240)
  canUsersCreatePosts Boolean @default(true)
  

  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum MemberRole{
  ADMIN
  MODERATOR
  MEMBER
}

enum JoinMethod{
  INVITE // invite only
  REQUEST // request to join, needs approval
  OPEN // anyone can join
}

enum MemberStatus{
  ACTIVE
  PENDING
  BANNED
}

model CommunityMember{
  id String @id @default(cuid())
  user User @relation(fields: [userId], references: [id])
  joinMethod JoinMethod @default(OPEN)
  status MemberStatus @default(ACTIVE)
  isApproved Boolean @default(false) //only admins can approve
  userId String
  space CommunitySpace @relation(fields: [spaceId], references: [id])
  spaceId String
  notifications CommunitySpaceNotification[]
  role MemberRole @default(MEMBER) 
  joinedAt DateTime @default(now())
}

enum POST_STATUS{
  DRAFT
  PUBLISHED
}

enum PostType{
  POST
  TIMELINE 
  MILESTONE
  GOAL 
}

model CreatePost{
  id String @id @default(cuid())
  author User @relation(fields: [authorId], references: [id])
  authorId String
  space CommunitySpace @relation(fields: [spaceId], references: [id])
  spaceId String
  postType PostType @default(POST)
  slug String @unique
  title String
  coverImage String @default("https://prosportsoutlook.com/wp-content/themes/prosports/images/default-post-pic.png")
  status POST_STATUS @default(DRAFT)
  content String
  tags String[]
  reportedBy PostReport[]
  category String
  timelineData Json? 
  mileStoneData Json? 
  readTime Int // in minutes
  views Int @default(0)

  attachments Json[] @default([])
  likes PostLike[]
  comments PostComment[]
  saves PostSave[]
  isCommentsEnabled Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PostReport{
  id String @id @default(cuid())
  post CreatePost @relation(fields: [postId], references: [id])
  postId String
  reportedBy User @relation(fields: [reportedById], references: [id])
  reportedById String
  reason String
  details String?
  createdAt DateTime @default(now())
}

model PostSave{
  id String @id @default(cuid())
  user User @relation(fields: [userId], references: [id])
  userId String
  post CreatePost @relation(fields: [postId], references: [id])
  postId String
  createdAt DateTime @default(now())
}

model PostLike{
  id String @id @default(cuid())
  user User @relation(fields: [userId], references: [id])
  userId String
  post CreatePost @relation(fields: [postId], references: [id])
  postId String
  createdAt DateTime @default(now())
}

model PostComment{
  id String @id @default(cuid())
  user User @relation(fields: [userId], references: [id])
  userId String
  post CreatePost @relation(fields: [postId], references: [id])
  postId String
  content String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CommunitySpaceRecentActivity{
  id String @id @default(cuid())
  space CommunitySpace @relation(fields: [spaceId], references: [id])
  spaceId String
  activity String 
  user User @relation(fields: [userId], references: [id])
  userId String
  createdAt DateTime @default(now())
}
enum NotificationPriority{
  LOW
  MEDIUM
  HIGH
}
model CommunitySpaceNotification{
  id String @id @default(cuid())
  space CommunitySpace @relation(fields: [spaceId], references: [id])
  spaceId String
  message String
  user CommunityMember @relation(fields: [userId], references: [id])
  userId String
  priority NotificationPriority @default(MEDIUM)
  isRead Boolean @default(false)
  createdAt DateTime @default(now())
}


enum SessionType{
  ONE_ON_ONE
  VIDEO_CALL
  WEBINAR
  WORKSHOP
}

enum PaymentStatus{
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

model MentorProfile {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String   @unique

  bio              String?
  expertise        String[]
  experienceYears  Int?

  timezone         String?
  availabilitySlots Json[]

  totalSessions    Int   @default(0)
  averageRating    Float @default(0.0)
  totalEarnings    Float @default(0.0)

  isVerified Boolean @default(false)
  isActive   Boolean @default(true)
  reasonForNotVerification Json?
  reasonForDeactivation    String?

  paymentStatus PaymentStatus @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  currentJob      Json?
  pastJobs        Json[]
  socialProfiles  Json[]

  technicalSkills   String[]
  softSkills        String[]
  certifications    Json[]
  specializations   String[]

  mentoringCategories String[]
  targetAudiences     String[]
  sessionTypesOffered SessionType[]

  rate     Float  @default(0.0)
  currency String @default("INR")

  applicationQuestions Json[]

  isAgreedToTerms           Boolean @default(false)
  codeOfConductAgreement    Boolean @default(false)
  backgroundCheckAgreement  Boolean @default(false)

  sessions MentorSession[]

}

model MentorSession {
  id           String        @id @default(cuid())
  
  mentor       MentorProfile @relation(fields: [mentorId], references: [id], onDelete: Cascade)
  mentorId     String
  
  student      User          @relation("StudentSessions", fields: [studentId], references: [id], onDelete: Cascade)
  studentId    String

  mentorUser   User?         @relation("MentorSessions", fields: [mentorUserId], references: [id])
  mentorUserId String?

  sessionType  SessionType
  topic        String
  duration     Int
  scheduledAt  DateTime
  status       SessionStatus @default(SCHEDULED)
  feedback     Json?
  paymentStatus PaymentStatus @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}


enum SessionStatus {
  SCHEDULED
  COMPLETED
  CANCELLED
  RESCHEDULED
}


model PaymentTransaction {
  id             String        @id @default(cuid())
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId         String
  amount         Float
  currency       String        @default("INR")
  paymentMethod  String
  transactionId  String        @unique
  status         PaymentStatus @default(PENDING)
  type          String
  additionalInfo String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}


model AIInsight {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  
  title       String
  type        InsightType
  period      String  
  version     String   @default("v1.0")
  
  generationTrigger GenerationTrigger
  dataSnapshot Json   
  dataSources  Json   
  
  summary     String
  keyFindings Json   
  confidence  Int     
  
  recommendations Json   
  riskAnalysis    Json?   
  skillGaps       Json?   
  isRead      Boolean @default(false)
  isHelpful   Boolean? 
  userComment String?
  actionItemsCompleted Int @default(0)
  totalActionItems Int @default(0)
  
  creditsUsed Int       @default(1)
  shouldRegenerate Boolean @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum InsightType{
  CAREER
  EDUCATION
  HEALTH
  FINANCE
  PERSONAL_GROWTH
  ENTREPRENEURSHIP
}

enum GenerationTrigger{
  USER_ACTION
  SCHEDULED_GENERATION
  SYSTEM_AUTO_GENERATION
}

enum NotificationType{
  INFO
  WARNING
  ALERT

}

enum NotificationSender{
  SYSTEM
  USER
  ADMIN
}

model Notification {
  id String @id @default(cuid())
  user User @relation(fields: [userId], references: [id])
  userId String
  title String
  message String
  isRead Boolean @default(false)
  type NotificationType @default(INFO)
  sender NotificationSender @default(SYSTEM)
  senderId String? 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model AICareerPredictor{
  id String @id @default(cuid())
  user User @relation(fields: [userId], references: [id])
  userId String @unique

  currentTimeline Float @default(0.0)
  optimizedTimeline Float @default(0.0)
  confidenceScore Float @default(0.0)
  jobReadyDate DateTime?

  timelineComparison Json @default("{}")
  daysSaved Json @default("{}")
  paceAnalysis Json @default("{}")

  skillsRadarData Json @default("{}")
  skillProgression Json @default("{}")

  riskAssessment Json @default("{}")
  successProbability Json @default("{}")

  careerPathScenarios Json[] @default([])
  salaryProjections Json[] @default([])
  companyTargets Json[] @default([])

  roleMatches Json[] @default([])
  skillGaps Json[] @default([])

  whatToDos Json[] @default([])
  whatNotToDos Json[] @default([])

  successFactors Json[] @default([])

  // recommendations for improvement
  actionPlan Json @default("{}")
  marketInsights Json @default("{}")

  motivationAnalysis Json @default("{}")
  interviewReadiness Json @default("{}")
  resourcesRecommendations Json @default("{}")

  learningPatterns Json @default("{}")
  


  isOnboarded Boolean @default(false)
  onboardingData Json @default("{}")

  predictionVersion String @default("v1.0")
  ratingInfo Json @default("{}") // ratings and feedback summary
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}



model CreditUsage {
  id String @id @default(cuid())
  user User @relation(fields: [userId], references: [id])
  userId String
  type String
  creditsUsed Int
  description String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}







